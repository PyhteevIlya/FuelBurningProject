                            <td>@input.Name</td>
                            <td>@input.Description</td>
                            <td>
                                <a asp-action="Calc" asp-controller="Liquid" asp-route-id="@input.Id">Использовать</a>

                                @if (!input.IsActive)
                                {
                                    <a asp-action="DataInputEdit" asp-controller="Liquid" asp-route-id="@input.Id">Редактировать</a>
                                    <a asp-action="Remove" asp-controller="Liquid" asp-route-id="@input.Id">Удалить</a>
