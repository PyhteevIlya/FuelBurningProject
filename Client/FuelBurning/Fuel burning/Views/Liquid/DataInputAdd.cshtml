@model Fuel_burning.Models.LiquidFuelModel
<!DOCTYPE html>
<html>
<head>
@*    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@
</head>
<body>
    @using (Html.BeginForm("DataInputAdd", "Liquid", FormMethod.Post))
    {

        <div class="container">
            <h2>Исходные данные</h2>
            <div class="table-responsive">
                <div>
                    @if (ViewBag.DataInputsLiquid != null && ViewBag.DataInputsLiquid.IsActive)
                    {
                        ViewBag.DataInputsLiquid.Name = null;
                        ViewBag.DataInputsLiquid.Description = null;
                    }
                    <table>
                        <tr>
                            <td valign="top" width="210">
                                @Html.TextArea("DataInputsLiquid.Name", (string)(ViewBag.DataInputsLiquid.Name), htmlAttributes: new { type = "text", style = " width:200px; ", placeholder = "Введите название"})
                            </td>
                            <td>
                                @Html.TextArea("DataInputsLiquid.Description", (string)(ViewBag.DataInputsLiquid.Description), 5, 1, htmlAttributes: new { type = "text", style = " width:200px; height:30px", placeholder = "Введите описание"})
                            </td>
                        </tr>
                    </table>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Наименование показателя, ед. изм.</th>
                            <th>Величина</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Масса C,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.C", (double)(ViewBag.DataInputsLiquid.C), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса H,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.H", (double)(ViewBag.DataInputsLiquid.H), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса S,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.S", (double)(ViewBag.DataInputsLiquid.S), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса N,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.N", (double)(ViewBag.DataInputsLiquid.N), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса O,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.O", (double)(ViewBag.DataInputsLiquid.O), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Содержание влаги в топливе, масс. Wp,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.Wp", (double)(ViewBag.DataInputsLiquid.Wp), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Содержание золы в топливе, масс. Ap,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.Ap", (double)(ViewBag.DataInputsLiquid.Ap), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Температура подогрева воздуха перед горением, °С</td>
                            <td>@Html.TextBox("DataInputsLiquid.T_v", (double)(ViewBag.DataInputsLiquid.T_v), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса H2S,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.T_t", (double)(ViewBag.DataInputsLiquid.T_t), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса N2,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.alfaG", (double)(ViewBag.DataInputsLiquid.alfaG), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса H2O,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.M_недожог", (double)(ViewBag.DataInputsLiquid.M_недожог), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Масса g,%</td>
                            <td>@Html.TextBox("DataInputsLiquid.gg", (double)(ViewBag.DataInputsLiquid.gg), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <p>
        </p>
        <div class="form-group" style="margin-left: auto; margin-top: 15px">
            <button type="submit" style="font-size: 15px" class="btn btn-primary">Сохранить</button>
        </div>
    }

    @*<a href="@Url.Action("Excel", "Home")">Скачать решение в Excel</a>*@
</body>
</html>

<script>
    $(document).ready(function () {

        const a = (e) => {
            var charCode = (e.which) ? e.which : event.keyCode

            if (String.fromCharCode(charCode).match(/[^0-9\,]/g))

                return false;
        }
        $('input:not([name = "DataInput.Name"])').keypress(a);

    });
</script>