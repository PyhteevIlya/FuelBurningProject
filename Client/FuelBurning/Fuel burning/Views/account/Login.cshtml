@model Fuel_burning.Models.LoginModel;
<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>
<h2 style="margin-bottom:35px"></h2>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group" style="margin-bottom:20px">
            <label asp-for="Login">Логин</label>
            <input type="text" asp-for="Login" style="margin-left:20px" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group" style="margin-bottom:20px">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" style="margin-left:11px" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    </div>
</form>